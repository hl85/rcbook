{
  "name": "rcbook",
  "displayName": "RC Book",
  "description": "AI-assisted coding notebook extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "RC Book",
      "properties": {
        "rcbook.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for AI service"
        },
        "rcbook.ai.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model ID to use for chat"
        },
        "rcbook.ai.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for OpenAI API (e.g. for proxies)"
        }
      }
    },
    "commands": [
      {
        "command": "rcbook.openSidebar",
        "title": "RC Book: Open Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rcbook-sidebar",
          "title": "RC Book",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "rcbook-sidebar": [
        {
          "type": "webview",
          "id": "rcbook.sidebarView",
          "name": "RC Book"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run compile-web",
    "compile-web": "webpack --mode production",
    "watch": "tsc -watch -p ./",
    "watch-web": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run compile-tests",
    "compile-tests": "tsc -p . --outDir out",
    "test": "jest --no-watchman",
    "test:e2e": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vscode/test-electron": "^2.3.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.38.0",
    "glob": "^8.1.0",
    "jest": "^29.5.0",
    "mocha": "^11.7.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "js-yaml": "^4.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remark": "^14.0.3",
    "remark-parse": "^10.0.2",
    "remark-stringify": "^10.0.3",
    "unified": "^10.1.2",
    "uuid": "^9.0.0"
  }
}
