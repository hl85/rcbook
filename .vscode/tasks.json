{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"type": "npm",
			"script": "watch-web",
			"isBackground": true,
			"problemMatcher": {
				"owner": "webpack",
				"pattern": {
					"regexp": "^.*$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "webpack .*? [0-9a-f]+",
					"endsPattern": "compiled successfully"
				}
			},
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "watch-all",
			"dependsOn": [
				"npm: watch",
				"npm: watch-web"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"group": "build",
			"label": "npm: compile"
		}
	]
}